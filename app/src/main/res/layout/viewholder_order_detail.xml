<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/userOrderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/blue_grey"
            android:text="User_oder"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/userPhoneOrderTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/blue_grey"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Phone"
            app:layout_constraintStart_toStartOf="@+id/userOrderTxt"
            app:layout_constraintTop_toBottomOf="@+id/userOrderTxt" />

        <TextView
            android:id="@+id/userLocationOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/blue_grey"
            android:text="Location"
            app:layout_constraintStart_toStartOf="@+id/userPhoneOrderTxt"
            app:layout_constraintTop_toBottomOf="@+id/userPhoneOrderTxt" />

        <TextView
            android:id="@+id/userTotalTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_grey"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="Total"
            app:layout_constraintStart_toStartOf="@+id/userLocationOrder"
            app:layout_constraintTop_toBottomOf="@+id/userLocationOrder" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>